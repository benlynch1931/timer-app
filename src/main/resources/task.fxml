<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<AnchorPane xmlns="http://javafx.com/javafx/0.0.121"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.ar.controller.TaskController">

        <HBox fx:id="buttonBox">
                <Button fx:id="save" />
                <Button fx:id="back" />
        </HBox>

        <AnchorPane fx:id="nameBox">
                <TextField fx:id="taskName" />
        </AnchorPane>

        <AnchorPane fx:id="durationPane">
                <TextField fx:id="hours" />
                <TextField fx:id="minutes" />
                <TextField fx:id="seconds" />
                <Label fx:id="timeError" />
        </AnchorPane>
</AnchorPane>